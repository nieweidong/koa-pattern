# EditorConfig is awesome: https://github.com/nieweidong

root = true

# common settings
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# JS settings
[*.js]
indent_style = tab

# package.json settings
[package.json]
indent_style = tab
